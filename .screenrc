# ===============================================================
# ESCAPE - the COMMAND CHARACTER
# ===============================================================
escape ^aa
# escape ``
# escape ^zz

# =============================
# Display in right way
# =============================
defutf8 on
utf8 on on
term screen-256color
altscreen on

# =============================
# Options
# =============================
# nethack         on
startup_message off
vbell           off

termcapinfo xterm*|urxvt* ti@:te@

# ===============================================================
# STARTUP of programs in an extra window:
# ===============================================================
# screen -t bash      0 bash
# screen -t htop      9 htop

caption always "%{= kw}%-Lw%{=b rw}%50>[%n* %t]%{= kw}%+Lw%<"

backtick 1 0 0 whoami
backtick 2 5 5 $HOME/dotfiles/bin/memory.sh

hardstatus off
hardstatus alwayslastline
hardstatus string "%{= dc}[ %{= dM}%1`%{= dB}@%{= dM}%H%{= dc} ]%=%{= dc}[ %{= dM}%2`%{= dc} ]-[ %{= dM}%l%{= dc} ]-[ %{= dM}%M %d %c%{= dc} ]"

# $ is the delimiter of PS1, bash if the default title
shelltitle "] |bash"

# ^a R  reload screenrc
bind R eval "source $HOME/.screenrc" "echo '.screenrc reloaded!'"

bind h focus left
bind ^h focus left
bind j focus down
bind ^j focus down
bind k focus up
bind ^k focus up
bind l focus right
bind ^l focus right
